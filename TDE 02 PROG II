QUESTAO 4
#include <stdio.h>
#include <string.h>

int main() {
    char str[100];  
    int count = 0;  

    printf("Digite uma string: ");
    fgets(str, sizeof(str), stdin);

    str[strcspn(str, "\n")] = '\0';

    for (int i = 0; str[i] != '\0'; i++) {
        if (str[i] == 'a' || str[i] == 'A') {  
            count++;
        }
    }

    printf("O caractere 'a' aparece %d vezes na string.\n", count);

    return 0;
}


