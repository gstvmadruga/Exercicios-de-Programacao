QUESTAO 3
#include <stdio.h>
#include <string.h>

int main() {
    char str[100];  

    printf("Digite uma string: ");
    fgets(str, sizeof(str), stdin);

    str[strcspn(str, "\n")] = '\0';

    printf("Os caracteres da string são:\n");
    for (int i = 0; str[i] != '\0'; i++) {
        printf("%c\n", str[i]);
    }

    return 0;
}


